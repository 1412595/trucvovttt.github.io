<div class="row">
	<div class="col-lg-12">
		<div class="blog-details">
			{{#each blog}}
			<img src="/img/blog/{{blogImage}}" alt="blog-details">
			<div class="post-author">
				<a href="#">
					<i class="icofont icofont-user"></i>{{username}}</a>
				<a href="#">
					<i class="icofont icofont-speech-comments"></i>{{blogComment}}</a>
				<a href="#">
					<i class="icofont icofont-calendar"></i>{{blogDate}}</a>
			</div>
			<h4 class="post-title">
				<a href="#">{{blogTitle}}</a>
			</h4>
			<p>{{blogContent}}</p>
			<input type="hidden" name="blogID" value="{{blogID}}">
			{{/each}}
		</div>
		<div class="blog-comment row">
			{{#each comments}}
				<h4>{{accountID}}</h4>
				<p>{{commentContent}}</p>
			{{/each}}
		</div>
		<div class="blog-reply">
			<h4>Leave a Reply</h4>
			<form action="addComment" method="POST">
				<div class="row">
					<div class="col-lg-12">
						<textarea placeholder="Messege" name="message"></textarea>
						<button type="submit" name="replysubmit">Post Comment</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>